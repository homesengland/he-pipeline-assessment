{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowJs": true,
    "declaration": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2017"
    ],
    //"typeRoots": [
    //  "node_modules/@elsa-workflows"
    //],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src-react"
  ],
  "exclude": [
    "node_modules",
    "src-react/index.html"
  ]
}
